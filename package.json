{
  "name": "icebreakers-utils",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.4.1",
  "author": "'ice breaker' <'1324318532@qq.com'>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/icebreakers-utils.git"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/icebreakers-utils/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "vitest run --coverage.enabled",
    "test:dev": "vitest",
    "lint": "turbo run lint",
    "release": "changeset",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "commit": "commit",
    "script:init": "monorepo init",
    "script:sync": "monorepo sync",
    "script:clean": "monorepo clean",
    "script:mirror": "monorepo mirror"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.7.1",
