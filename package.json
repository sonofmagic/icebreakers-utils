{
  "name": "icebreakers-utils",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:pkg": "turbo run dev --parallel --filter=./packages/*",
    "build": "turbo run build",
    "build:pkg": "turbo run build --filter=./packages/*",
    "build:app": "turbo run build --filter=./apps/*",
    "test": "vitest run --coverage.enabled",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "sync": "cnpm sync @icebreakers/cli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/utils.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sonofmagic/utils/issues"
  },
  "homepage": "https://github.com/sonofmagic/utils#readme",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@tsconfig/recommended": "^1.0.2",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.4.9",
    "@vitest/coverage-v8": "^0.34.1",
    "cross-env": "^7.0.3",
    "defu": "^6.1.2",
    "del": "^6.1.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "eslint-config-icebreaker": "^1.2.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.1",
    "rollup": "^3.28.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
}