    "@commitlint/prompt-cli": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@icebreakers/eslint-config": "^1.0.1",
    "@icebreakers/monorepo": "^0.7.5",
    "@icebreakers/stylelint-config": "^1.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/get-value": "^3.0.5",
    "@types/klaw": "^3.0.6",
    "@types/lint-staged": "^13.3.0",
    "@types/lodash": "^4.17.15",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.13.5",
    "@types/set-value": "^4.0.3",
    "@vitest/coverage-v8": "~3.0.6",
    "ci-info": "^4.1.0",
    "cross-env": "^7.0.3",
    "defu": "^6.1.4",
    "es-toolkit": "^1.32.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react": "^7.37.4",
    "execa": "^9.5.2",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "get-value": "^4.0.1",
    "husky": "^9.1.6",
    "klaw": "^4.1.0",
    "lint-staged": "^15.4.3",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "micromatch": "^4.0.8",
    "only-allow": "^1.2.1",
    "pathe": "^2.0.3",
    "pkg-types": "^1.3.1",
    "rimraf": "^6.0.1",
    "set-value": "^4.1.0",
    "tslib": "^2.8.0",
    "tsup": "^8.3.6",
    "tsx": "^4.19.3",
    "turbo": "^2.4.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "~3.0.6",
    "yaml": "^2.7.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
